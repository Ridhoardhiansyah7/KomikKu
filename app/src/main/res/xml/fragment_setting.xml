<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Quality, and Animasi">

        <SwitchPreference
            app:title="Qualitas gambar"
            android:icon="@drawable/baseline_high_quality_24"
            android:enabled="false"
            android:defaultValue="true"
            android:summary="Selalu tampilkan qualitas terbaik"
            app:key="quality"/>

        <SwitchPreference
            app:title="Cache"
            android:defaultValue="true"
            android:enabled="false"
            android:icon="@drawable/baseline_cached_24"
            android:summary="Selalu simpan gambar pada cache\nJika diaktifkan maka ini akan menyimpan gambar pada cache aplikasi\nsehingga ketika lain waktu ditampilkan lagi ini tidak akan menggunakan data / wifi"
            app:key="cache"
            />
        <Preference
            app:title="Advance"
            app:summary="Mengatur ukuran slider dan gambar detail komik secara kostum"
            android:key="advance"
            android:icon="@drawable/baseline_photo_size_select_large_24"
            />

        <SwitchPreference
            app:title="Mode Baca"
            app:summary="Mode Saat ini : Scrool"
            android:icon="@drawable/baseline_menu_book_24"
            app:key="mode"/>


        <SwitchPreference
            app:title="Animasi Detail"
            android:icon="@drawable/baseline_animation_24"
            android:defaultValue="true"
            android:summary="Selalu animasikan gambar detail komik"
            app:key="animasiGambar"/>

        <SwitchPreference
            app:title="Animasi transisi"
            android:defaultValue="false"
            android:icon="@drawable/baseline_animation_24"
            android:summary="Selalu animasikan transisi antar halaman"
            app:key="animasiTransisi"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="Language">

        <SwitchPreference app:title="Bahasa aplikasi"
            android:summary="Saat ini : Indonesia"
            app:defaultValue="true"
            android:icon="@drawable/baseline_language_24"
            app:key="bahasa"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="About App">

        <Preference app:title="App Version"
            android:summary="Versi : 1.0.1"
            android:icon="@drawable/baseline_info_24"
            android:enabled="false"
            app:key="version"/>

        <Preference app:title="Laporkan Bug"
            android:icon="@drawable/baseline_bug_report_24"
            app:key="bug"/>

    </PreferenceCategory>

</PreferenceScreen>