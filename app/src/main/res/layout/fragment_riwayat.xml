<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="History menu"
            app:titleCentered="true"
            android:id="@+id/toolbar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_below="@id/appbar"
        android:layout_margin="10dp"
        android:id="@+id/rvHistory"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:text=" Anda belum membaca komik, silahkan membaca untuk menyimpan data\n Untuk menghapus data silahkan tekan komik yg ingin dihapus datanya"
        android:drawableStart="@drawable/baseline_info_24"
        android:id="@+id/itemNull"/>

</RelativeLayout>